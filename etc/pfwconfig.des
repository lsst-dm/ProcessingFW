# $Id$
# $Rev::                                  $:  # Revision of last commit.
# $LastChangedBy::                        $:  # Author of last commit.
# $LastChangedDate::                      $:  # Date of last commit.

when_to_email = run    # never, run, block
wrapper_debug = 1
use_qcf = True
use_db_in = True
use_db_out = True
save_md5sum = True
create_junk_tarball = True

# default to not use target archive
use_target_archive_input = never   # never, job
use_target_archive_output = never  # wrapper, job, never
use_home_archive_input = wrapper #
use_home_archive_output = job # wrapper, job, block, run, never

# framework patterns
tmpfile_prefix = tmp_${unitname}_r${reqnum}p${attnum:2}w${wrapnum:5}_${modulename}
modnamepat = ${unitname}_r${reqnum}p${attnum:2}w${wrapnum}_${modulename}
<filename_pattern>
    config = ${unitname}_r${reqnum}p${attnum:2}_${cfglabel}_config.des

    qoutput = ${unitname}_r${reqnum}p${attnum:2}_${blockname}_${modulename}_${searchname}.${suffix}
    inputwcl = ${modnamepat}_input.wcl
    outputwcl = ${modnamepat}_output.wcl
    log = ${modnamepat}.log
    runjob = ${unitname}_r${reqnum}p${attnum:2}_${blockname}_runjob.sh

    inputwcltar =  j${jobnum:4}_inputwcl_${blockname}_${unitname}_r${reqnum}p${attnum:2}.tar.gz
    outputwcltar =  j${jobnum:4}_outputwcl_${blockname}_${unitname}_r${reqnum}p${attnum:2}.tar
    jobwcl =  j${jobnum:4}_job_${blockname}_${unitname}_r${reqnum}p${attnum:2}.wcl
    jobtasklist =  j${jobnum:4}_task_${blockname}_${unitname}_r${reqnum}p${attnum:2}.list
    envfile =  j${jobnum:4}_env_${blockname}_${unitname}_r${reqnum}p${attnum:2}.txt
    junktar =  ${unitname}_r${reqnum}p${attnum:2}_${blockname}_j${jobnum:4}_junk.tar

    #block = ${unitname}_r${reqnum}p${attnum:2}_${blockname}_${flabel}.${fsuffix}
    #blockbase = ${unitname}_r${reqnum}p${attnum:2}_${blockname}_${flabel}
    #job = ${unitname}_r${reqnum}p${attnum:2}_${blockname}_j${jobnum:4}_${flabel}.${fsuffix}
    #jobbase = ${unitname}_r${reqnum}p${attnum:2}_${blockname}_j${jobnum:4}_${flabel}
    blockbase = ${flabel}
    block = ${flabel}.${fsuffix}
    job = j${jobnum:4}_${flabel}_${blockname}_${unitname}_r${reqnum}p${attnum:2}.${fsuffix}
    #jobbase = ${blockname}_j${jobnum:4}_${flabel}
    jobbase = j${jobnum:4}_${flabel}_${blockname}_${unitname}_r${reqnum}p${attnum:2}

    mngrdag = ${unitname}_r${reqnum}p${attnum:2}_${dagtype}.dag
    blockdag = ${unitname}_r${reqnum}p${attnum:2}_block.dag
    jobdag = ${unitname}_r${reqnum}p${attnum:2}_job.dag
</filename_pattern>
<directory_pattern>
    <inputwcl>
        name = wcl
        ops = ${ops_run_dir}/inputwcl/${modulename}
        runtime = inputwcl/${modulename}
    </inputwcl>
    <outputwcl>
        name = wcl
        ops = ${ops_run_dir}/outputwcl/${modulename}
        runtime = outputwcl/${modulename}
    </outputwcl>
    <list>
        name = list
        ops = ${ops_run_dir}/list/${modulename}
        runtime = list/${modulename}
    </list>
    <log> 
        name = log
        ops = ${ops_run_dir}/log/${modulename}
        runtime = log/${modulename}
    </log>
    <junktar> 
        name = junktar
        ops = ${ops_run_dir}/junktar/
        runtime = junktar
    </junktar>
    <jobdir> 
        name = jobdir
        ops = tbd 
        runtime = ${unitname}_r${reqnum}p${attnum:2}_${blockname}_j${jobnum}
    </jobdir>
</directory_pattern>
