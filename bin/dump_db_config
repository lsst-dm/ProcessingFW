# $LastChangedDate::                      $:  # Date of last commit.

""" Output default configuration values stored in DB to wcl file """

import sys
import time
import processingfw.pfwdb as pfwdb
from intgutils.wclutils import write_wcl

def dump_db_config(args=None):
    """ Entry point """
    if args is None:
        args = sys.argv[1:]

    if len(args) != 1:
        print 'Usage: dump_db_config outfilename'
        return 1

    filename = args[0]

    print "Getting defaults from DB...",
    sys.stdout.flush()
    starttime = time.time()
    dbh = pfwdb.PFWDB()
    dbwcl = dbh.get_database_defaults()
    dbh.close()
    print "Done (%0.2f secs)" % (time.time()-starttime)

    print "Writing to file...",
    sys.stdout.flush()
    starttime = time.time()
    with open(filename, "w") as outfh:
        write_wcl(dbwcl, outfh, True, 4)
    print "Done (%0.2f secs)" % (time.time()-starttime)

    return 0

if __name__ == "__main__":
    sys.exit(dump_db_config(sys.argv[1:]))
